#!/bin/sh

# –ü–æ–ª—É—á–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç –∫–æ–º–∞–Ω–¥—ã –∏ —Å–æ—Ö—Ä–∞–Ω—è–µ–º –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π
mute_status=$(pactl get-source-mute @DEFAULT_SOURCE@ | awk '{print $2}')

# –°—Ä–∞–≤–Ω–∏–≤–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç —Å "yes"
if [ "$mute_status" = "yes" ]; then
    echo "./image/no mic.png"  # –í–æ–∑–≤—Ä–∞—â–∞–µ–º 1, –µ—Å–ª–∏ –∑–≤—É–∫ –≤—ã–∫–ª—é—á–µ–Ω
else
    echo üéôÔ∏è  # –í–æ–∑–≤—Ä–∞—â–∞–µ–º 0, –µ—Å–ª–∏ –∑–≤—É–∫ –≤–∫–ª—é—á–µ–Ω
fi
